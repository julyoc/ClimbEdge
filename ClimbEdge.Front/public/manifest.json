  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#10b981",
  "description": "Your ultimate climbing companion app for tracking routes, progress, and connecting with the climbing community.",
  "orientation": "portrait",
  "scope": "/",
  "categories": ["sports", "fitness", "lifestyle"],
  "lang": "en",
  "icons": [
    {
      "src": "icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml"
    },
    {
      "src": "icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml"
    },
    {
      "src": "icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ]
}
